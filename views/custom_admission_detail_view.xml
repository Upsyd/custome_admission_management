<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


<!-- Root menu-->
    <menuitem id = "menu_customadmission_root" name="Custome Admission Managment System" />
    <menuitem id = "menu_customadmission_parent" parent="menu_customadmission_root" name="Custom Registration" />

<!-- FORM View-->
        <record id="view_customadmission_detail_form" model="ir.ui.view">
            <field name="name">customadmission.customadmission.form</field>
            <field name="model">customadmission.customadmission</field>
            <field name="type" >form</field>  
            <field name="arch" type="xml">
              <form string="Registration" version="7.0">
        <sheet>
	   <field name="image" widget="image" class="oe_left oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;, &quot;size&quot;: [90, 90]}"/>
	    <div class="oe_title oe_left"><h1>
            <field name="name" placeholder="First Name"  default_focus="1"/></h1>
	    </div>
           <group colspan="4" col="4">
	    <field name="mname"/> 
            <field name="lname"/>
            <field name="mobile"/>
            <field name="email"/>
            <field name="cemail"/> 
	    <field name="exp"/>
	    <field name="year"/>
	    <field name="month"/>   
            </group>

	     <notebook>
	    <page string="Contacts">  
	     <group colspan="4" col="4">
	    <field name="address"/> 
	    <field name="street2"/> 
	    <field name="gender"/>
	    <field name="dob"/> 
            <field name="city"/>
	    <field name="state"/>
	    <field name="pincode"/>
	    
	    </group>
	    </page>
	    </notebook>
		
        </sheet>        
        </form>
         </field>
     </record>
<!-- Survey Module Form view -->
<record id="survey_user_input_inherit_form" model="ir.ui.view">
		    <field name="name">survey_user_input_inherit_form</field>
			<field name="model">survey.user_input</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="survey.survey_user_input_form"/>
			<field name="arch" type="xml">
				<xpath expr="//form/sheet/group/group/field[@name='quizz_score']" position="after">
					<field name="score_result">
					</field>
				</xpath>
			</field>
		</record>

 <!-- TREE View-->
        <record id="view_customadmission_detail_tree" model="ir.ui.view">
            <field name="name">customadmission.customadmission.tree</field>
            <field name="model">customadmission.customadmission</field>
        <field name="type" >tree</field>            
        <field name="arch" type="xml">
         <tree string="Registration">
            <field name="name"/>
	    <field name="mname"/> 
            <field name="lname"/>
            <field name="mobile"/>
            <field name="email"/>
            <field name="cemail"/>  
	  
            <field name="address"/> 
	    <field name="gender"/>
	    <field name="dob"/> 
            <field name="city"/>
	    <field name="state"/>
	    <field name="pincode"/>
	    <field name="exp"/>                       
        </tree>
            </field>
        </record>
 <!-- Action View-->

      <record id="customadmission_detail" model="ir.actions.act_window">
            <field name="name">Custom Admission Detail</field>
            <field name="res_model">customadmission.customadmission</field>
        <field name="view_type" >form</field>            
        <field name="view_mode">tree,form</field>
      </record>
<!-- Menu items for student -->
    <menuitem action="customadmission_detail" id="menu_customadmission_detail" parent="menu_customadmission_parent"/>
    </data>
</openerp>
